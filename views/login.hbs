<div class="row">
    <div class="col-sm-4 col-sm-offset-4">

        {{#equals error.error "AUTH_FAIL"}}
            {{>message type="danger" message="Логин или пароль введены неверно"}}
        {{/equals}}

        <form class="form-signin" action="/login" method="post">
            <h2 class="form-signin-heading">Вход</h2>
            <label for="login" class="sr-only">Email</label>
            <input type="email" id="login" name="login" class="form-control" placeholder="Email address" required=""
                   autofocus="" {{#if login}} value="{{login}}"{{/if}}>
            <label for="password" class="sr-only">Пароль</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password"
                   required="">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <a href="/register">Зарегистрироваться</a>
    </div>
</div>
